@model VoucherType

@{
    ViewBag.Title = "Úprava typu voucheru";
}

<h2 class="mb-3">Úprava typu voucheru</h2>

<form enctype="multipart/form-data" asp-controller="voucherType" asp-action="edit" method="post" class="mt-3">

    <div asp-validation-summary="All" class="text-danger"></div>

    <input hidden asp-for="Id" />

    <div class="form-group row">
        <label asp-for="Name" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="Name" class="form-control" placeholder="Název" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group row">
        <label asp-for="IsValid" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="IsValid" class="form-control"/>
        </div>
    </div>

    <div class="form-group row">
        <div class="col-sm-10">

            <button type="submit" class="btn btn-success">Uložit</button>

            <a asp-controller="voucherType" asp-action="index"
               class="btn btn-danger">Zpět</a>
        </div>
    </div>

</form>
