@model VoucherType

@{
    ViewBag.Title = "Vytvořit typ voucheru";
}

<h2 class="mb-3">Vytvořit typ voucheru</h2>

<form enctype="multipart/form-data" asp-controller="voucherType" asp-action="create" method="post" class="mt-3">

    <div asp-validation-summary="All" class="text-danger"></div>

    <div class="form-group row">
        <label asp-for="Name" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="Name" class="form-control" placeholder="Název" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group row">
        <div class="col-sm-10">
            <button type="submit" class="btn btn-success">Uložit</button>
            <a asp-controller="voucherType" asp-action="index"
               class="btn btn-danger">Zpět</a>
        </div>
    </div>
</form>