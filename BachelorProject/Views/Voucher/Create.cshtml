@model VoucherViewModel

@{
    ViewBag.Title = "Vytvořit voucher";
}

<h3 class="mb-3">Vytvořit voucher</h3>

<form enctype="multipart/form-data" asp-controller="voucher" asp-action="Create" method="post" class="mt-3">

    <input hidden asp-for="ApplicationUserName" value="@User.Identity.Name" />

    <div asp-validation-summary="All" class="text-danger"></div>

    <div class="form-group row">
        <label asp-for="ValidFrom" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="ValidFrom" class="form-control" placeholder="Datum" />
            <span asp-validation-for="ValidFrom" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="ValidUntil" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="ValidUntil" class="form-control" placeholder="Datum" />
            <span asp-validation-for="ValidUntil" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group row">
        <label asp-for="Title" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="Title" class="form-control" placeholder="Titulek" />
            <span asp-validation-for="Title" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group row">
        <label asp-for="Description" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="Description" class="form-control" placeholder="Popis" />
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group row">
        <label asp-for="Value" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="Value" class="form-control" placeholder="Hodnota" />
            <span asp-validation-for="Value" class="text-danger"></span>
        </div>
    </div>

    @*<div class="form-group row">
        <label asp-for="VoucherTypeId" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <select asp-for="VoucherTypeId" class="custom-select mr-sm-2"
                    asp-items="Model.VoucherTypes">
                <option value="">Vyberte typ voucheru</option>
            </select>
            <span asp-validation-for="VoucherTypeId" class="text-danger"></span>
        </div>
    </div>*@

    <div class="form-group row">
        <div class="col-sm-10">
            <button type="submit" class="btn btn-success">Vytvořit</button>
            <a class="btn btn-danger" asp-controller="voucher" asp-action="index">Zpět</a>
        </div>
    </div>

</form>
