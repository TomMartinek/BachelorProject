@model List<UserRoleViewModel>

@{ 
    var userId = ViewBag.userId;
    ViewBag.Title = "Úprava rolí uživatele";
}

<form method="post">
    <div class="card">
        <div class="card-header">
            <h2>Úprava rolí zaměstnance</h2>
        </div>
        <div class="card-body">
            @for (int i = 0; i < Model.Count; i++)
            {
                <div class="form-check m-1">
                    <input type="hidden" asp-for="@Model[i].Id" />
                    <input type="hidden" asp-for="@Model[i].Name" />
                    <input asp-for="@Model[i].IsSelected" class="form-check-input" />
                    <label asp-for="@Model[i].IsSelected" class="form-check-label">
                        @Model[i].Name
                    </label>
                </div>
            }
        </div>
        <div class="card-footer">
            <input type="submit" value="Uložit" class="btn btn-success" style="width:auto" />
            <a asp-action="EditUser" asp-route-id="@userId"
               class="btn btn-danger" style="width:auto">Zpět</a>
        </div>
    </div>
</form>